#!/bin/bash
# Task 4: Batch Pokémon Data Retrieval with retry

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
OUTPUT_DIR="pokemon_data"
API_URL="https://pokeapi.co/api/v2/pokemon"
ERROR_FILE="errors.txt"

mkdir -p "$OUTPUT_DIR"

for pokemon in "${POKEMON_LIST[@]}"; do
    echo "Fetching data for $pokemon..."
    success=false
    for attempt in {1..3}; do
        if curl -s -f "$API_URL/$pokemon" -o "$OUTPUT_DIR/${pokemon}.json"; then
            echo "Saved data to $OUTPUT_DIR/${pokemon}.json ✅"
            success=true
            break
        else
            echo "Attempt $attempt failed for $pokemon."
            sleep 2
        fi
    done
    if [[ $success == false ]]; then
        echo "[$(date '+%Y-%m-%d %H:%M:%S')] Failed to fetch $pokemon after 3 attempts" >> "$ERROR_FILE"
    fi
    sleep 2
done
