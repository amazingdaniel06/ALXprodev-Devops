#!/bin/bash
# Task 1: Extract Pok√©mon data using jq, awk, sed

DATA_FILE="data.json"

if [[ ! -f "$DATA_FILE" ]]; then
    echo "Error: $DATA_FILE not found."
    exit 1
fi

# Extract and format variables
name=$(jq -r '.name' "$DATA_FILE" | sed 's/.*/\u&/')
formatted_height=$(jq -r '.height' "$DATA_FILE" | awk '{printf "%.1f", $1/10}')
formatted_weight=$(jq -r '.weight' "$DATA_FILE" | awk '{printf "%.1f", $1/10}')
type=$(jq -r '.types[0].type.name' "$DATA_FILE" | sed 's/.*/\u&/')

# Required exact output format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
