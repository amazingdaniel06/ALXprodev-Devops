#!/bin/bash
# Task 0: API Request Automation
# Fetch Pikachu data from the PokÃ©mon API

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make request and handle errors
if ! curl -s -f "$API_URL" -o "$OUTPUT_FILE"; then
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] Failed to fetch data for Pikachu" >> "$ERROR_FILE"
    exit 1
fi
